
@{
    ViewBag.Title = "ConfirmEmail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="breadcrumbs">
    <div class="container">
        <ol class="breadcrumb breadcrumb1 animated wow slideInLeft animated" data-wow-delay=".5s" style="visibility: visible; animation-delay: 0.5s; animation-name: slideInLeft;">
            <li><a href="/"><span style="color:#fff" aria-hidden="true"></span>Trang chủ</a></li>
            <li class="active" style="color:#fff">Xác minh tài khoản</li>
        </ol>
    </div>
</div>
<div class="container">
    <div class="register">
        <h2 style="color:#fff">Xác minh tài khoản</h2>
        <h4 style="color:#fff">@ViewBag.Email</h4>
        <h4 style="color:#fff">@ViewBag.Message</h4>
    </div>
</div>

